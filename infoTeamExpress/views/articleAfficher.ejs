<!DOCTYPE html>
<html lang="fr">
<% include header %>

    <body>
        <!-- NAVIGATION -->
        <nav class="navbar navbar-light bg-light">
            <a class="navbar-brand" href="/">
                <img src="/images/logoBook.svg" width="30" height="30" alt="">
            </a>
            <ul class="nav justify-content-center">
                <li class="nav-item">
                    <a class="nav-link active" href="../article/ajouter">Ajouter un article</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="../article/modifier">Modifier/Supprimer un article</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="../article/afficher">Lire les articles</a>
                </li>
            </ul>
        </nav>

        <!-- TITRE -->
        <h1>Liste des Articles !</h1>

        <!-- AFFICHAGE ARTICLE -->
        <section class="container">
            <div class="row">
                <% for (let i = 0; i < tabN.length; i++) {%>
                    <div class="col-md-12">
                        <div class="card border-primary mb-12 articleCard" style="max-width: 60rem;">
                            <div class="card-header">
                                <%= tabTag[i] %>
                            </div>
                            <div class="card-body text-primary">
                                <h5 class="card-title">
                                    <%= tabT[i] %>
                                </h5>
                                <p class="card-text">
                                    <%= tabC[i] %>
                                </p>
                            </div>
                            <div class="card-header">
                                <%= tabA[i] %>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
            
            
        </section>
        


    </body>

</html>