<!DOCTYPE html>
<html lang="fr">
<% include header %>

    <body>

        <!-- AFFICHAGE ARTICLE -->
        <section class="container">
            <div class="row">
                <% for (let i = 0; i < tabN.length; i++) {%>
                    <div class="col-md-4">
                        <div class="oneCard">
                            
                            <div class="card border-primary mb-12 articleCard" style="max-width: 60rem;">
                                <% if(tabTag[i]=='sport') {%>
                                <img class="card-img-top" src="/images/sportCard.jpg" alt="Card image cap">
                                <% } else if(tabTag[i]=='voyage') {%>
                                    <img class="card-img-top" src="/images/voyageImg.jpg" alt="Card image cap">
                                <% } else{%>
                                    <img class="card-img-top" src="/images/economieCard.jpg" alt="Card image cap">
                                <% } %>
                                <div class="card-body text-primary">
                                    <div class="btnModifCom">
                                        <form action="/article/afficherFull/:<%= tabN[i]%>" method="GET" class="col-md-12">
                                            <button type="submit" class="btn btn-outline-primary col-md-6 btnCard">
                                                <img src="/images/lireIcon.svg" alt="lireIcon">
                                            </button>
                                        </form>
                                    </div>  
                                    <h5 class="card-title">
                                        <%= tabT[i] %>
                                    </h5>
                                    
                                    <p class="card-text">
                                        <%= tabC[i] %>
                                    </p>
                                    
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted">
                                        <%= tabD[i] %>
                                            <%= tabA[i] %>
                                    </small>
                                </div>
                                
                            </div>
                        </div>
                       
                        
                    </div>
                <% } %>
            </div>
            
            
        </section>
        


    </body>

</html>