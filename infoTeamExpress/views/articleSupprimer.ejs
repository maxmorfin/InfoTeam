<!DOCTYPE html>
<html lang="fr">
<% include header %>

    <body>

        <!-- NAVIGATION -->
        <% include navbar %>

        <!-- TITRE -->
        <h1>Supprimer votre article</h1>

        <!-- COMMENTAIRE A SUPPRIMER -->
        <section class="container">
                <% for (let i = 0; i < tabN.length; i++) {%>
                    <div>
                        <div class="card-group" id="articleFull">
                            <div class="card">
                            <% if(tabTag[i]=='sport') {%>
                                <img class="card-img-top" src="/images/sportCard.jpg" alt="Card image cap">
                                <% } else if(tabTag[i]=='voyage') {%>
                                    <img class="card-img-top" src="/images/voyageImg.jpg" alt="Card image cap">
                                    <% } else{%>
                                        <img class="card-img-top" src="/images/economieCard.jpg" alt="Card image cap">
                                        <% } %>
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= tabT[i] %>
                                    </h5>
                                    <p class="card-text">
                                        <%= tabC[i] %>
                                    </p>
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted">
                                        <%= tabD[i] %>
                                            <%= tabA[i] %>
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="btnModifCom">
                        <form action="/article/suppression/:<%= tabN[i]%>" method="POST">
                            <button type="submit" class="btn btn-outline-danger btnCard" id="btnSubmitSupp">
                                <img src="/images/deleteIcon.svg" alt="deleteIcon">
                            </button>
                        </form>
                    </div>
                   
                <% } %>
            </div>
        </section>
    </body>

</html>