<!DOCTYPE html>
<html>
<% include header %>

    <body>
        <!-- NAVBAR -->
        <% include navbar %>

        <!-- connexion -->
        <h1>
            <%= title %>
        </h1>
        <p>Welcome to
            <%= title %>
        </p>

        <div>
            <form action="/personne/connexionsubmit" method="POST">
                <div class="form-group">
                    Email:
                    <input class="form-control" type="text" name="mailLoginForm" required/>
                    <br>
                </div>
                <div class="form-group">
                    Mot de passe:
                    <input class="form-control" type="password" name="passwordForm" required/>
                </div>
                <button type="submit" class="btn btn-primary">Connexion</button>
            </form>


            <% if (userExist == false) {%>
                <p>L'user n'existe pas</p>
                <%}%>
                <button class="btn btn-success">
                    <a href="/personne/inscription">Inscription</a>
                </button>
                

        </div>
    </body>

</html>