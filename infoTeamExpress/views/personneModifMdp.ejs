<!DOCTYPE html>
<html>
<% include header %>

    <body>
        <!-- NAVBAR -->
        <% include navbar %>

        <!-- MODIF MDP -->
        <h1>
            <%= title %>
        </h1>
        <p>Welcome to
            <%= title %>
        </p>
        <% if(badOldMdp == 1){%>
            <div>
                <p>Votre ancien mot de passe n'est pas celui attendu</p>
            </div>
            <% } %>
                <% if(newMdpSuccess == 1){%>
                    <div>
                        <p>Mot de passe modifier avec succes</p>
                    </div>
                    <% } %>
                        <% if (errors) { %>
                            <ul>
                                <%  for (let i in errors) { %>
                                    <li>
                                        <%=  errors[i].param %> :
                                            <%=  errors[i].msg %>
                                    </li>
                                    <% } %>
                            </ul>
                            <% }  %>
        <div>
            <form action="/personne/modifmdp" method="POST">
                <div class="form-group">
                    Ancien mot de passe:
                    <input class="form-control" type="password" name="mdpFormOld" required/>
                </div>
                <div class="form-group">
                    Nouveau mot de passe:
                    <input class="form-control" type="password" id="mdpFormNew" name="mdpFormNew" required/>
                </div>
                <div class="form-group">
                    Retapez le nouveau mot de passe:
                    <input class="form-control" type="password" id="mdpFormNewBis" name="mdpFormNewBis" required/>
                </div>
                <button type="submit" class="btn btn-primary">Modification</button>
            </form>
        </div>


    </body>

</html>