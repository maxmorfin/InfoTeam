<!DOCTYPE html>
<html>
<% include header %>

    <body>

<!-- NAVBAR -->
        <% include navbar %>

        <!-- modification -->
        <h1>
            <%= title %>
        </h1>
        <p>Welcome to
            <%= title %>
        </p>
        <% if(mailexist==1){ %>
            <div>
                <p>Ce mail existe déjà sur infoTeam</p>
            </div>
            <% } %>
        
                <% if(modifok==1){ %>
                    <div>
                        <p>Modification(s) enregistrée(s) avec succès</p>
                    </div>
                    <% } %>
        
                        <% if (errors) { %>
                            <ul>
                                <%  for (let i in errors) { %>
                                    <li>
                                        <%=  errors[i].param %> :
                                            <%=  errors[i].msg %>
                                    </li>
                                    <% } %>
                            </ul>
                            <% }  %>

        <div>
            <form action="/personne/modification" method="POST">
                <div class="form-group">
                    Nom:
                    <input class="form-control" type="text" name="nomForm" value="<%=n%>" required/>
                </div>
                <div class="form-group">
                    Prenom:
                    <input class="form-control" type="text" name="prenomForm" value="<%=p%>" required/>
                </div>
                <div class="form-group">
                    Mail:
                    <input class="form-control" type="text" id="mailForm" name="mailForm" value="<%=m%>" required/>
                </div>
                <button type="submit" class="btn btn-primary">Modification</button>
            </form>
            <a href="/personne/modifmdp">Modifier le mot de passe</a>
            <a href="/mail/newsletter">Abonnez vous !</a>
        </div>

    </body>

</html>